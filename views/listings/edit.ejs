<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mb-3 mt-3">
            <h3>Edit Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks great!</div>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <input name="listing[description]" value="<%=listing.description%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                <div class="mb-3">
                    <p>Original image:</p>
                    <%= console.log("originalimageurl: ", originalimageurl) %>
                    <img src="<%= originalimageurl %>">
                </div>
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload New Image</lable>
                    <input name="listing[image]" value="<%=listing.image.url%>" type="file" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" value="<%=listing.price%>" type="number"class="form-control" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" value="<%=listing.country%>" type="text"class="form-control" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" value="<%=listing.location%>" type="text"class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <!-- Category Selection Dropdown (pre-fills with current category) -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-select" required>
                        <option value="" disabled>Select a category</option>
                        <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
                        <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
                        <option value="Iconic cities" <%= listing.category === 'Iconic cities' ? 'selected' : '' %>>Iconic cities</option>
                        <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                        <option value="Amazing pools" <%= listing.category === 'Amazing pools' ? 'selected' : '' %>>Amazing pools</option>
                        <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                        <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                        <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
                        <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
                    </select>
                    <div class="invalid-feedback">Category should be selected</div>
                </div>
                <button class="btn btn-a btn-dark mb-3">Edit</button>
            </form>
        </div>
    </div> 
</body>
