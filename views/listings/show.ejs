<% layout("/layouts/boilerplate") -%>

<script>
    const maptoken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3 title">
            <h3><%= listing.title %></h3>
        </div>
        <div class="col-6 offset-3 listing-card card-show" style="width: 30rem;">
            <img src="<%= listing.image.url %>" class="card-img-top card-img-show" alt="Listing image">
            <div class="card-body card-details">
                <p class="card-text">
                    Owned by <i><%= listing.owner.username %></i><br>
                    <%= listing.description %><br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                    <%= listing.country %><br>
                    <%= listing.location %>
                </p>
            </div>
        </div>
    </div>

    <% if (curruser && curruser._id.toString() === listing.owner._id.toString()) { %>
        <div class="row mb-3">
            <div class="col-md-2 offset-md-3 d-flex justify-content-between">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-a btn-dark">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                    <button class="btn btn-dark offset-3">Delete</button>
                </form>
            </div>
        </div> 
    <% } %>    

    <hr>

    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3"> 
            <% if (curruser) { %>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                    <div>
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" placeholder="Enter comments" type="text" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add some comments for review!!</div>
                    </div>
                    <button class="btn btn-submit">Submit</button>
                </form>
                <hr>
            <% } %>

            <% if (listing.reviews.length > 0) { %>
                <div class="row">
                    <p><b>All Reviews</b></p>
                    <% for (let review of listing.reviews) { %>
                        <div class="col-5 mb-3">
                            <div class="col-12">
                                <div class="card-review">
                                    <h5 class="card-title mt-3">@<%= review.author.username %></h5>
                                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text"><%= review.comment %></p>
                                    <% if (curruser) { %>
                                        <form class="mb-3 mt-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <hr>
            <% } %>

        </div>

        <div class="row mb-3">
            <div class="col-6 offset-3">
                <h3>Where you'll be</h3>
                <div id="map" style="height: 400px ; background-color: deepskyblue"></div>
            </div>   
        </div>
    </div>

    <script src="/js/map.js"></script>
</body>
