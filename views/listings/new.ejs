<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3 mb-3">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks great!</div>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Image Link</lable>
                    <input name="listing[image]"  type="file" class="form-control">
                    <div class="invalid-feedback">Image should be valid</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>

                        <div class="invalid-feedback">Country should be valid</div>
                        
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" placeholder="Telangana , Hyderabad" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-a btn-dark mb-3">Add</button>
            </form>
        </div>
    </div>
</body>
