<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3 mb-3">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks great!</div>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Image Link</lable>
                    <input name="listing[image]"  type="file" class="form-control">
                    <div class="invalid-feedback">Image should be valid</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>

                        <div class="invalid-feedback">Country should be valid</div>
                        
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" placeholder="Telangana , Hyderabad" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <!-- Category Selection Dropdown -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-select" required>
                        <option value="" disabled selected>Select a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic cities">Iconic cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Amazing pools">Amazing pools</option>
                        <option value="Castles">Castles</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="invalid-feedback">Category should be selected</div>
                </div>
                <button class="btn btn-a btn-dark mb-3 w-100">Add</button>
            </form>
        </div>
    </div>
</body>
